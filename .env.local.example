# Example environment variables for Kerala Southcliff
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
UPLOADTHING_TOKEN=your-uploadthing-token
JWT_ACCESS_SECRET=generate-a-random-secret
JWT_REFRESH_SECRET=generate-a-random-refresh-secret

# Optional for Cloudinary fallback
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Optional for Redis-based rate limiting
REDIS_URL=redis://default:password@host:port

# Optional for 2FA
TWILIO_ACCOUNT_SID=your-twilio-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=your-twilio-phone-number
SENDGRID_API_KEY=your-sendgrid-api-key
